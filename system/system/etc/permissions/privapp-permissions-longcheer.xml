<!--
This XML file declares which signature|privileged permissions should be
granted to privileged applications on QTI devices.
It allows additional grants on top of privapp-permissions-platform.xml
-->

<permissions>
	
    <privapp-permissions package="com.tblenovo.lenovotips">
        <permission name="android.permission.READ_PRIVILEGED_PHONE_STATE"/>
        <permission name="android.permission.WRITE_SETTINGS"/>
    </privapp-permissions>
	
    <privapp-permissions package="com.tblenovo.center">
        <permission name="android.permission.GET_ACCOUNTS_PRIVILEGED"/>
        <permission name="android.permission.MANAGE_ACCOUNTS"/>
        <permission name="android.permission.READ_CONTACTS"/>
        <permission name="android.permission.READ_PRIVILEGED_PHONE_STATE"/>
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
        <permission name="android.permission.MANAGE_USERS"/>
	<permission name="android.permission.WRITE_SECURE_SETTINGS"/>
	<permission name="android.permission.SYSTEM_ALERT_WINDOW"/>
	<permission name="android.permission.REAL_GET_TASKS"/>
	<permission name="android.permission.INTERACT_ACROSS_USERS"/>
    </privapp-permissions>

    <privapp-permissions package="com.lenovo.tbengine">
        <permission name="android.permission.REBOOT" />
        <permission name="android.permission.WRITE_SECURE_SETTINGS" />
        <permission name="android.permission.ACCESS_CACHE_FILESYSTEM" />
        <permission name="android.permission.WRITE_MEDIA_STORAGE" />
