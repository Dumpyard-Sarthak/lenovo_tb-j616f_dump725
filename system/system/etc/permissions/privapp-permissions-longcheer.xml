        <permission name="android.permission.NOTIFY_PENDING_SYSTEM_UPDATE" />
        <permission name="android.permission.INSTALL_PACKAGES" />
    </privapp-permissions>
    
    <!--OhanaLauncher permission-->
    <privapp-permissions package="com.google.android.apps.mediahome.launcher">
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
        <permission name="android.permission.BIND_APPWIDGET"/>
        <permission name="android.permission.STATUS_BAR"/>
        <permission name="android.permission.ACCESS_NETWORK_STATE" />
        <permission name="android.permission.GET_ACCOUNTS" />
        <permission name="android.permission.GET_PACKAGE_SIZE" />
        <permission name="android.permission.INTERNET" />
        <permission name="android.permission.RECEIVE_BOOT_COMPLETED" />
        <permission name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    </privapp-permissions>
    
    <!--YandexSearch permission-->
    <privapp-permissions package="ru.yandex.searchplugin">
        <permission name="android.permission.MANAGE_VOICE_KEYPHRASES"/>
        <permission name="android.permission.BIND_APPWIDGET"/>
        <permission name="android.permission.CAPTURE_AUDIO_HOTWORD"/>
    </privapp-permissions>

    <privapp-permissions package="com.lenovo.ue.device">
        <permission name="android.permission.CHANGE_COMPONENT_ENABLED_STATE"/>
        <permission name="android.permission.READ_PRECISE_PHONE_STATE"/>
        <permission name="android.permission.WRITE_SECURE_SETTINGS"/>
        <permission name="android.permission.READ_NETWORK_USAGE_HISTORY"/>
        <permission name="android.permission.READ_LOGS"/>
        <permission name="android.permission.REAL_GET_TASKS"/>
        <permission name="android.permission.BATTERY_STATS"/>
    </privapp-permissions>

    <privapp-permissions package="com.lenovo.ota">
        <permission name="android.permission.REBOOT" />
        <permission name="android.permission.WRITE_SECURE_SETTINGS" />
        <permission name="android.permission.ACCESS_CACHE_FILESYSTEM" />
        <permission name="android.permission.WRITE_MEDIA_STORAGE" />
        <permission name="android.permission.WRITE_SETTINGS" />
        <permission name="android.permission.LOCAL_MAC_ADDRESS" />
        <permission name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
        <permission name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
        <permission name="android.permission.RECOVERY" />
        <permission name="android.permission.NOTIFY_PENDING_SYSTEM_UPDATE" />
    </privapp-permissions>

    <privapp-permissions package="com.lenovo.lsf.device">
        <permission name="android.permission.INSTALL_PACKAGES"/>
        <permission name="android.permission.BATTERY_STATS"/>
        <permission name="android.permission.REAL_GET_TASKS"/>
        <permission name="android.permission.READ_PRIVILEGED_PHONE_STATE"/>
        <permission name="android.permission.PACKAGE_USAGE_STATS"/>
        <permission name="android.permission.STATUS_BAR"/>
        <permission name="android.permission.INSTALL_SELF_UPDATES"/>
        <permission name="android.permission.INSTALL_PACKAGE_UPDATES"/>
        <permission name="android.permission.CONNECTIVITY_INTERNAL"/>
    </privapp-permissions>

    <privapp-permissions package="com.lenovo.leos.appstore.pad">
        <permission name="android.permission.INSTALL_PACKAGES"/>
        <permission name="android.permission.WRITE_MEDIA_STORAGE"/>
